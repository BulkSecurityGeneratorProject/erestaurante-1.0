    <!--
        Added the entity Imposto.
    -->
    <changeSet id="20171029164442-1" author="jhipster">
        <createTable tableName="imposto">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="descricao" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="iv_tot_trib" type="double">
                <constraints nullable="true" />
            </column>

            <column name="i_icms" type="double">
                <constraints nullable="true" />
            </column>

            <column name="i_ipi" type="double">
                <constraints nullable="true" />
            </column>

            <column name="i_ii" type="double">
                <constraints nullable="true" />
            </column>

            <column name="i_issqn" type="double">
                <constraints nullable="true" />
            </column>

            <column name="i_pis" type="double">
                <constraints nullable="true" />
            </column>

            <column name="i_pisst" type="double">
                <constraints nullable="true" />
            </column>

            <column name="i_cofins" type="double">
                <constraints nullable="true" />
            </column>

            <column name="i_cofinsst" type="double">
                <constraints nullable="true" />
            </column>

            <column name="i_icmsuf_dest" type="double">
                <constraints nullable="true" />
            </column>

            <column name="ioutros" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="configurar" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        
    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
</databaseChangeLog>
